@model TissueSampleRecords.Models.SampleModel

@{
    ViewData["Title"] = "Create";
}

    <h3>Collection Type: @ViewBag.CollectionTitle</h3>


<h4>Create new sample</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Collection_Title" value="@ViewBag.CollectionTitle" />
            <input type="hidden" asp-for="Last_Updated" value="@DateTime.Now.ToShortDateString()" />
            <div class="form-group">
                <label asp-for="Donor_Count" class="control-label"></label>
                <input asp-for="Donor_Count" class="form-control" />
                <span asp-validation-for="Donor_Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material_Type" class="control-label"></label>
                <input asp-for="Material_Type" class="form-control" />
                <span asp-validation-for="Material_Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" id="@ViewBag.CollectionId" class="btn btn-success" />
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@ViewBag.CollectionId" style="margin-left:30px">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
